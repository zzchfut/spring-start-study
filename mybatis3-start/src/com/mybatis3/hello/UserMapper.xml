<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis3.hello.UserMapper">

  <select id="selectUser" parameterType="java.lang.Long" resultType="com.mybatis3.hello.User">
    select * from t_user where id = #{id}
  </select>
  
  <select id="selectUserAll" resultType="com.mybatis3.hello.User">
    select * from t_user where 1 = 1
  </select>
   
</mapper>